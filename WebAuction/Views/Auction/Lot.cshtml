@model WebAuction.Models.Lot

@{
    ViewBag.Title = "Lot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lot</h2>

<div>
    <h4>Lot</h4>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BuyOutPrice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BuyOutPrice)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartPrice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartPrice)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Bet)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Bet)
        </dd>

    </dl>
</div>
<p>
    @using (Html.BeginForm("PlaceBet", "Auction", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Bet, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Bet, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Bet, "", new {@class = "text-danger"})
            </div>
        </div>
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.BuyOutPrice)
        @Html.HiddenFor(m => m.StartPrice)
        @Html.HiddenFor(m => m.Description)
        @Html.HiddenFor(m => m.Title)
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Bet" class="btn btn-default"/>
            </div>
        </div>
    }
</p>
<p>
    @Html.ActionLink("Back to List", "AllLots")
</p>